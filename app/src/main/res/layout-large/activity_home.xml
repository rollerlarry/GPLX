<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutHightTitle"
            android:layout_gravity="bottom"
            android:background="@color/backgroundTitle"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/textSizeTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subTitle"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutHightButtonHome"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/background_custom"
        >
        <Button
            android:id="@+id/btnHome"
            android:layout_width="256px"
            android:layout_height="@dimen/layoutHightButtonHome"
            android:text="@string/textButtonHome"
            android:background="@drawable/round_button_custom_selected"
            />
        <Button
            android:id="@+id/btnInfo"
            android:layout_width="256px"
            android:layout_height="@dimen/layoutHightButtonInfo"
            android:text="@string/textButtonInfo"
            android:background="@drawable/round_button_custom_nonselected"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnContact"
            android:layout_width="256px"
            android:layout_height="@dimen/layoutHightButtonContact"
            android:text="@string/textButtonContact"
            android:background="@drawable/round_button_custom_nonselected"
            android:textColor="@color/white"

            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>